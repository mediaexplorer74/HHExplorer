<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="News.Views.AboutPage"
             Title="About News">

    <StackLayout>
        <Frame BackgroundColor="DarkBlue" Padding="24" CornerRadius="0">
            <Label Text="HHExplorer 1.1.1 (multi-platform app)" HorizontalTextAlignment="Center" 
                   TextColor="White" FontSize="Large"/>
        </Frame>
        <Label Text="News in Xamarin.Forms" FontSize="Medium"/>
        <Label FontSize="Micro">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="MediaExplorer 2023"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>

</ContentPage>
